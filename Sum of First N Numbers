/ / less optimized code using recursion

public class Solution {
    public static long adder(long n, long sum){
        if(n==0) return sum;
        sum+=n;
        return adder(--n,sum);
    }
    public static long sumFirstN(long n) {
        long sum = 0;
        return adder(n,sum);
    }
}

/ / Optimized approach using this formula ------>>>  Sn = (n*(n+1))/2

public class Solution {
    public static long sumFirstN(long n) {
        return (n*(n+1))/2;
    }
}

